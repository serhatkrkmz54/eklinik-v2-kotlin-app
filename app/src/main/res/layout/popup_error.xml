<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/popup_background"
    android:padding="32dp">

    <!-- Error Icon Circle -->
    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/error_circle_background"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/popup_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_error_white"
            android:contentDescription="Error icon" />

    </FrameLayout>

    <!-- Error Title -->
    <TextView
        android:id="@+id/popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="12dp" />

    <!-- Error Message -->
    <TextView
        android:id="@+id/popup_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="An error occurred. Please try again."
        android:textSize="14sp"
        android:textColor="@color/gray_text"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="24dp" />

    <!-- OK Button -->
    <Button
        android:id="@+id/popup_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="OK"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/button_error"
        android:elevation="2dp" />

</LinearLayout>